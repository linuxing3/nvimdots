"----------------------------------------------------------------------
" after enter
"----------------------------------------------------------------------
function! s:after_vim_enter()
	if mapcheck("\<m-e>", 'i') == ''
		inoremap <m-e> <c-w><c-r>="(missing snippet engine)"<cr>
	endif
endfunc


"----------------------------------------------------------------------
" auto event
"----------------------------------------------------------------------
augroup VimFinalizeGroup
	au!
	au VimEnter * call s:after_vim_enter()
augroup END


